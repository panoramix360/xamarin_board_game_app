<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.Views.ItemDetailPage"
             Title="{Binding Title}">

    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <Label Text="Nome:" FontSize="Medium" />
            <Label Text="{Binding BoardGame.Name}" FontSize="Small"/>
            <Label Text="Descrição:" FontSize="Medium" />
            <Label Text="{Binding BoardGameDetail.Description}" FontSize="Small"/>
            <Label Text="Ano de Publicação:" FontSize="Medium" />
            <Label Text="{Binding BoardGameDetail.YearPublished}" FontSize="Small"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>