<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.Views.SearchPage"
             Title="{Binding Title}">
    <ContentPage.Content>
        <StackLayout VerticalOptions="StartAndExpand" Margin="35">
            <Label Text="Digite o usuário para buscar os títulos" />
            <Entry x:Name="usernameEntry" HorizontalTextAlignment="Center" />
            <Button Text="Buscar" Clicked="OnSearchButtonClicked" />
            <Label x:Name="messageLabel" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>